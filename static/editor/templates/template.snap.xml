<project name="{{ project.globals.name }}" app="Snap! 4.0, http://snap.berkeley.edu" version="1">
	<notes>{{ project.globals.notes }}</notes>
    <thumbnail>{{ project.globals.thumbnail }}</thumbnail>
	
    <stage name="Stage" width="480" height="360" costume="1" tempo="60" threadsafe="false" lines="round" codify="false" scheduled="false">
        <pentrails></pentrails>
        <costumes>
            <list>
				{% for backdrop in project.background.costumes %}
					<item>
						<costume name="{{backdrop.name}}" center-x="0" center-y="0"  image="{{backdrop.data}}"></costume>
					</item>
				{% endfor %}
			</list>
        </costumes>
		
        <sounds>
            <list /> 
        </sounds>
		
		<variables>
			{% for variable in project.background.variables %}
				<variable name="{{ variable }}">
					<l>0</l> 
				</variable>
			{% endfor %}
		</variables>
		
        <blocks/> 
		
        <scripts>
			{{ project.scripts.background | safe}}
		</scripts>
		
        <sprites>
			{% for sprite in project.sprites %}
				<sprite name="{{ sprite.id }}" x="{{ sprite.x }}" y="{{ sprite.y }}" heading="90" scale="1" rotation="1" draggable="true" costume="1" color="80,80,80" pen="tip">
					<costumes>
						<list>
							{% for costume in sprite.costumes %}
								<item>
									<costume name="{{costume.name}}" center-x="{{costume[center-x]}}" center-y="{{costume[center-y]}}"  image="{{costume.data}}"></costume>
								</item>
							{% endfor %}
						</list>
					</costumes>
					
					<sounds>
						<list /> 
					</sounds>
					
					<variables>
						{% for variable in sprite.variables %}
							<variable name="{{ variable }}">
								<l>0</l> 
							</variable>
						{% endfor %}					
					</variables>
					
					<blocks/> 
					<scripts>
						{{ project.scripts[sprite.id] | safe }}
					</scripts>
				</sprite>
			{% endfor %}
    	</sprites>
	</stage>
	
	<variables>
		{% for variable in project.globals.variables %}
			<variable name="{{ variable }}">
				<l>0</l> 
			</variable>
		{% endfor %}	
	</variables>
	
	<hidden/> 
	<headers/> 
	<code/> 
	
	<blocks/> 
</project>